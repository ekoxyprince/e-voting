<%-include("../partials/adminheader")%>
<div class="main-content">
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
        <div class="card">
            <div class="boxs mail_listing">
                <div class="inbox-center table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th colspan="1">
                                    <div class="inbox-header">
                                        <%if(action==='edit'){%>Edit Election<%}else{%>Create An Election<%}%>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <form class="composeForm" action="<%if(action==='edit'){%>/admin/update_elect/<%=election.eid%><%}else{%>/admin/add_election<%}%>" method="post">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="type" id="email_address" class="form-control" placeholder="Election type" value="<%if(action==='edit'){%><%=election.election_type%><%}else{%><%}%>" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                  <select name="status" class="form-control" id=""><option value="pending">Select a status</option><option value="winner">winner</option> <option value="lost">lost</option></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="start" id="subject" class="form-control" value="<%if(action==='edit'){%><%=election.start%><%}else{%><%}%>" placeholder="Election start date" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="stop" id="subject" class="form-control" value="<%if(action==='edit'){%><%=election.stop%><%}else{%><%}%>" placeholder="Election stop date" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="party" id="subject" class="form-control" value="<%if(action==='edit'){%><%=election.party%><%}else{%><%}%>" placeholder="Enter Party" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="candidate" id="subject" class="form-control" value="<%if(action==='edit'){%><%=election.candidate%><%}else{%><%}%>" placeholder="Enter Candidate" required>
                                </div>
                            </div>
                          
                            <div class="col-lg-12 mt-3">
                                <div class="m-l-25 m-b-20">
                                    <button type="submit" class="btn btn-info btn-border-radius waves-effect">Send</button>
                                    <button type="reset" class="btn btn-danger btn-border-radius waves-effect">Discard</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

<%-include("../partials/adminfooter")%>