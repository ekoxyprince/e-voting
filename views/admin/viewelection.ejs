<%-include("../partials/adminheader")%>
<section>
    <div class="main-content">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>View Election</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-md">
                                <tr>
                                    <th>#</th>
                                    <th>Election Type</th>
                                    <th>Status</th>
                                    <th>Start</th>
                                    <th>Stop</th>
                                    <th>Party</th>
                                    <th>update</th>
                                    <th>Delete</th>
                                </tr>
                                <% let sum = 0 %>
                                <% if (elections.length>0) { %>
                                    <% elections.forEach(election => { %>
                                        <%sum ++ %>
                                        <tr>
                                            <td><%=sum%></td>
                                            <td>
                                                <%= election.election_type %>
                                            </td>
                                            <td>
                                                <%= election.status %>
                                            </td>
                                            <td>
                                                <%= election.start %>
                                            </td>
                                            <td>
                                                <%= election.stop %>
                                            </td>
                                            <td>
                                                <%= election.party %>
                                            </td>
                                            <td>
                                                <a href="/admin/update_elect/<%=election.eid%>" class="btn btn-info">Update</a>
                                            </td>
                                            <td>
                                                <a href="/admin/delete_elect/<%=election.eid%>" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } %>




                            </table>
                        </div>
                    </div>
</section>

<%-include("../partials/adminfooter")%>