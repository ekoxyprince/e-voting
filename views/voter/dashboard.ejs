              <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
              
              <script>
                const ctx = document.getElementById('myChart');
                const ctx2 = document.getElementById('myChart2')
              
                new Chart(ctx, {
                  type: 'bar',
                  data: {
                    labels: ['APC', 'PDP', 'LP', 'APGA', 'YNPP'],
                    datasets: [{
                      label: '# of Votes',
                      data: [<%=APC%>, <%=PDP%>, <%=LP%>, <%=APGA%>, <%=YNPP%>],
                      borderWidth: 1
                    }]
                  },
                  options: {
                    scales: {
                      y: {
                        beginAtZero: true
                      }
                    }
                  }
                });
                new Chart(ctx2, {
